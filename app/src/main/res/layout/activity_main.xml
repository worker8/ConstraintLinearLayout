        android:foreground="?selectableItemBackground"
        android:padding="8dp"
        android:text="Remove View!"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/addTextView"
        app:layout_constraintTop_toTopOf="parent" />

